{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "Launch localhost with sourcemaps",
            "type": "edge",
            "request": "launch",
            "url": "http://localhost/home.html",
            "webRoot": "${workspaceRoot}",
            "sourceMaps": true
        },
        {
            "name": "Launch home.html (without sourcemaps)",
            "type": "edge",
            "request": "launch",
            "file": "${workspaceRoot}/home.html"
        },
        {
            "name": "Attach with sourcemaps",
            "type": "edge",
            "request": "attach",
            "url": "http://10.0.0.10:8080/home.html", // optional: used to find the right tab running in Edge
            "port": 9222,
            "sourceMaps": true
        },
        {
            "name": "Attach to url with files served from ./out",
            "type": "edge",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceRoot}/out"
        }
    ]
}