{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "Chrome : Launch with sourcemaps",
            // works with or without preLaunchTask
            // must start/F1 twice however if using preLaunch task
            "type": "chrome",
            "request": "launch",
            // "preLaunchTask": "serve:watch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}",
            "sourceMaps": false,
            "runtimeArgs": [
            "--remote-debugging-port=9222"
            ]
        },
        {
            "name": "Chrome : Launch without sourcemaps",
            // doesn't work'
            "type": "chrome",
            "request": "launch",
            "file": "${workspaceRoot}",
            "runtimeArgs": [
            "--remote-debugging-port=9222"
            ]
        },
        {
            "name": "Chrome : Attach with sourcemaps",
            // doesn't work'
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "sourceMaps": true,
            "url": "http://localhost:3000"
        },
        {
            "name": "Chrome : Attach to url",
            // doesn't work'
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}"
        }
    ]
}