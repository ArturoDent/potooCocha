{
    "version": "0.1.0",
    "compounds": [
        {
            "name": "Start server and chrome debugger",
            "configurations": ["Gulp: serve", "Chrome : Launch with sourcemaps", "Gulp: watch" ]
        }
    ],
    "configurations": [
     
        {
            "type": "node",
            "request": "launch",
            "name": "Gulp sync",
            "program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
            "args": [
                "sync"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Gulp: serve",
            "program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
            "args": [
                "serve"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Gulp: watch",
            "program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
            "args": [
                "watch"
            ]
        },
        {
            "name": "Chrome : Launch with sourcemaps",
            // "preLaunchTask": "Gulp: Start server only",
    
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}",
            "sourceMaps": true,
            "runtimeArgs": [
            "--remote-debugging-port=9222"
            ]
        },
        {
            "name": "Chrome : Launch without sourcemaps",
            // doesn't work'
            "type": "chrome",
            "request": "launch",
            "file": "${workspaceRoot}",
            "runtimeArgs": [
            "--remote-debugging-port=9222"
            ]
        },
        {
            "name": "Chrome : Attach with sourcemaps",
            // doesn't work'
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "sourceMaps": true,
            "url": "http://localhost:3000",
        },
        {
            "name": "Chrome : Attach to url",
            // doesn't work'
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}"
        }

    ]
}