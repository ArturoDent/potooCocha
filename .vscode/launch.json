{
    "version": "0.1.0",
    "configurations": [
        {
            "name": "Chrome : Launch with sourcemaps",
            "type": "chrome",
            "request": "launch",
            // "preLaunchTask": "sync",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}",
            "sourceMaps": true,
            // "outDir": "dist/js",
            "runtimeArgs": [
            "--remote-debugging-port=9222"
            ]
        },
        {
            "name": "Chrome : Launch without sourcemaps",
            "type": "chrome",
            "request": "launch",
            "file": "${workspaceRoot}",
            "runtimeArgs": [
            "--remote-debugging-port=9222"
            ]
        },
        {
            "name": "Chrome : Attach with sourcemaps",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "sourceMaps": true,
            "outDir": "dest",
            "url": "http://localhost:3000"
        },
        {
            "name": "Chrome : Attach to url",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}"
        }
    ]
}